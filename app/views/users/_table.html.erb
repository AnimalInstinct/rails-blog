<table class="table">
  <thead>
    <tr>
      <th>Gravatar</th>
      <th>Name</th>
      <th>Email</th>
      <th>Articles</th>
      <th>Joined</th>
      <th colspan='3'>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to gravatar_for(user, size: 35), user %></td>
        <td><%= link_to user.username, user %></td>
        <td><%= user.email %></td>
        <td><%= pluralize(user.articles.count, "article") %></td>
        <td><%= time_ago_in_words(user.created_at) %> ago</td>
        <td><div class="btn-group"><%= link_to 'Show', user_path(user), class: "btn btn-outline-success" %>
       <%= link_to 'Edit', edit_user_path(user), method: :get, class: "btn btn-outline-primary" %>
        <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger"%></div></td> 
      </tr>
    <% end %>
  </tbody>
</table>