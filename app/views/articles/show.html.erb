<div class="text-center">
  <h1 class="text-center mt-5"><%= @article.title %></h1>
  <div class="btn-group">
    <%= link_to 'Delete', article_path(@article), method: :delete, class: "btn btn-outline-primary", data: { confirm: "Are you sure?" } %>
    <%= link_to 'Edit', edit_article_path(@article), method: :get, class: "btn btn-outline-primary" %>
    <%= link_to 'Back to list', articles_path, class: "btn btn-outline-primary" %>
  </div>
</div>

<div class="col-2">
  <div class="d-flex flex-row">
    <%= link_to gravatar_for(@article.user, size: 50), user_path(@article.user), class: "me-3" %>
    <div class="d-flex flex-column align-items-start text-muted">
      <span><%= @article.user.username %></span>
      <span><%= time_ago_in_words(@article.created_at) %> ago</span>
    </div>
  </div>
</div>
<div class="mt-5"></div>
<p><%= @article.description %></p>

