  <%= form_with(model: @article, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :title, class: "form-label" %> 
        <div class="col-10"> <%= f.text_field :title, class: "form-control" %></div>
      </div>
      <div class="form-group mt-4">
        <%= f.label :description, class: "form-label" %>
        <div class="col-10">
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
      <div class="form-group btn-group mt-4">
        <%= f.submit class: "btn btn-outline-primary btn-large" %>

      <%= link_to 'Cancel', articles_path, class: "btn btn-outline-danger btn-large" %>
      </div>
  <% end %>

  <% if @article.errors.any? %>
    <h2>The following errors preventing the article from being saved:</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>