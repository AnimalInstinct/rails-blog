<div class="container">
  <div class="my-4">
    <h1><%= @category.name %></h1>
    <% if logged_in? && current_user.admin %>
    <div class="btn-group">
      <%= link_to 'Delete', category_path(@category), method: :delete, class: "btn btn-outline-primary", data: { confirm: "Are you sure?" } %>
      <%= link_to 'Edit', edit_category_path(@category), method: :get, class: "btn btn-outline-primary" %>
      <%= link_to 'Back to list', categories_path, class: "btn btn-outline-primary" %>
    </div>
    <% end %>
  </div>
  <div class="my-4">
    <%= @category.description %>
  </div>
</div>