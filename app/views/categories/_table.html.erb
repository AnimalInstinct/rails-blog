<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created</th>
      <th>Updated</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= truncate(category.description, :length => 100) %></td>
        <td><%= time_ago_in_words(category.created_at) %> ago</td>
        <td><%= time_ago_in_words(category.updated_at) %> ago</td>
        <td><div class="btn-group"><%= link_to 'Show', category_path(category), class: "btn btn-outline-success" %>
       <%= link_to 'Edit', edit_category_path(category), method: :get, class: "btn btn-outline-primary" %>
        <%= link_to 'Delete', category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger"%></div></td> 
      </tr>
    <% end %>
  </tbody>
</table>